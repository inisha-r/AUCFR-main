{
  "builds": [
    {
      "src": "ml/requirements.txt",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.12"
  },
  "hooks": {
    "build": "pip install python3-distutils && pip install -r ml/requirements.txt"
  }
}
